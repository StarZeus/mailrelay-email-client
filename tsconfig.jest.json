{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "commonjs",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "@jest/globals"
    ],
    "isolatedModules": false,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.js",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
} 